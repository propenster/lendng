<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@6.2.1/css/fontawesome.min.css" integrity="sha384-QYIZto+st3yW+o8+5OHfT6S482Zsvz2WfOzpFSXMF9zqeLcFV0/wlZpMtyFcZALm" crossorigin="anonymous">    
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>
<body>
    @*<div>
        @RenderBody()
        </div>*@

    <section id="menu">
        <div class="logo">
            @*            <img src="/images/logo.png" alt="" />
            *@
            <h2>Lend'ng</h2>
        </div>

        <div class="items">
            <li><i class="fa-sharp fa-solid fa-house"></i><a href="#">Dashboard</a></li>
            <li><i class="fa-solid fa-list-dropdown"></i><a href="#">Loan Management</a></li>
            <li><i class="fa-solid fa-user-group"></i><a href="#">User Management</a></li>
            <li><i class="fa-thin fa-envelope"></i><a href="#">Credit Scoring</a></li>
            <li><i class="fa-solid fa-play"></i><a href="#">User Onboarding</a></li>
            <li><i class="fa-sharp fa-solid fa-gear"></i><a href="#">Settings</a></li>


        </div>
    </section>


    <section id="mainpage">
        <div class="navigation">
            <div class="nav1">
                <div class="search">
                    <i class="bi bi-search"></i>
                    <input type="text" placeholder="Search" />

                </div>
            </div>

            <div class="profile">
                <i class="far fa-bell"></i>

                <div class="profileIcons">
                    <h5>Venty Loans</h5>

                    <i class="fa-light fa-user"></i>
                </div>

            </div>

        </div>




        <div class="mainbody">
            @RenderBody()
        </div>


    </section>



    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
